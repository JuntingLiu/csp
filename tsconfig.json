{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
  },
  // "files": ["src/index.ts"],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test",
    "build",
    "dist",
    "docs",
  ]
}
